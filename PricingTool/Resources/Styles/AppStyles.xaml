    <Style TargetType="Entry" >
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalTextAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="RobotoMedium"/>
        <Setter Property="Margin" Value="10,10,0,0"/>
        <Setter Property="HeightRequest" Value="10"/>
        <Setter Property="BackgroundColor" Value="#B8F8EB"/>
        <Setter Property="TextColor" Value="#18446F"/>
        <Setter Property="PlaceholderColor" Value="#14B797"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal">
                        <VisualState.Setters>
                            <!--<Setter Property="FontAttributes" Value="Italic"/>-->
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="FontAttributes" Value="Italic"/>
                            <Setter Property="PlaceholderColor" Value="IndianRed"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
        

    </Style>

    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="#14B797"/>
        <Setter Property="ThumbColor" Value="#18446F"/>
        <Setter Property="Margin" Value="15"/>
        <Setter Property="VerticalOptions" Value="Center"/>
        <!--<Setter Property="HorizontalOptions" Value="Center"/>-->
        
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    
                    <VisualState x:Name="On">
                        <VisualState.Setters>
                            <Setter Property="OnColor" Value="#14B797" />
                            <Setter Property="ThumbColor" Value="#18446F" />
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Off">
                        <VisualState.Setters>
                            <Setter Property="ThumbColor" Value="IndianRed" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
        <!--<Setter Property="Color" Value="LightCoral"/>-->
    </Style>

    <Style TargetType="Grid" x:Key="GridResults">
        <Setter Property="BackgroundColor" Value="#81ECD7"/>
        <Setter Property="Margin" Value="0"/>
        
    </Style>

    <Style TargetType="Label" x:Key="LblButtonStart">
        <Setter Property="VerticalOptions" Value="Center"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="FontSize" Value="48"/>
        <Setter Property="TextColor" Value="#18446F"/>
        <Setter Property="FontFamily" Value="LobsterTwoItalic"/>

        
    </Style>

    <Style TargetType="Label" x:Key="LblResultPricing">
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="TextColor" Value="#18446F"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>


</ResourceDictionary>