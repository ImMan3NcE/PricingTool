            </Grid>
            
            <Grid Grid.Row="1"
                 ColumnDefinitions=".7*,.3*">
                <Entry x:Name="entryLDC" Placeholder="Wklej ścieżkę do pliku LDC!" />
                <Switch  Grid.Column="1"
                        IsToggled="True"
