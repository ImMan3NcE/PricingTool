                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label 
                               Text="{Binding dataLDC{0}}"
                               VerticalOptions="End"
                               HorizontalOptions="End"
                               Margin="0,0,10,10"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>
            

        </Grid>
