                        x:Name="switchLPL"
                        Toggled="Switch_Toggled"
                        IsToggled="True"/>
                
            </Grid>

            <Grid Grid.Row="4"
                  ColumnDefinitions=".7*,.3*">
                <Entry x:Name="entryLAC" Placeholder="Wklej ścieżkę do pliku LAC!" Text="C:\Users\Filip\Desktop\testyCsv\KCS11551-f - I17-106-V01-S_LAC.xlsx"/>
                <Switch Grid.Column="1"
