            </Grid>
            
            <Grid Grid.Row="5"
                  ColumnDefinitions=".7*,.3*">
                <Entry x:Name="entryTrave" Placeholder="Wklej ścieżkę do pliku Trave!" Text="C:\Users\Filip\Desktop\testyCsv\KCS11551-f - I17-106-V01-S_TRAVEE.csv"/>
                <Switch Grid.Column="1"
                        x:Name="switchTrave"
                        Toggled="Switch_Toggled"
                        IsToggled="True"/>
            </Grid>
            
            <Grid Grid.Row="6"
